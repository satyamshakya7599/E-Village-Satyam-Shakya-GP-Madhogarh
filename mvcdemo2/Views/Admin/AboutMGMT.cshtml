@{
    ViewBag.Title = "AboutMGMT";
    Layout = "~/Views/Shared/admin master.cshtml";
}

@model List<mvcdemo2.Models.suggetion>
<div class="container">
    <div class="row">
        <table class="table table-bordered table-hover"
    style="background:linear-gradient(#A5D6A7,#2E7D32)">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>MObile</th>
                <th>Email</th>
                <th>Suggetion</th>
                <th>Date</th>
                <th>Add</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
            @foreach (var x in Model)
            { 
            <tr>
                <td>@x.id</td>
                <td>@x.name</td>
                <td>@x.mob</td>
                <td>@x.email</td>
                <td>@x.msg</td>
                <td>@x.suggetiondate</td>
                <td><a href="#"><span class="fa fa-plus" style="font-size:30px;"></span></a></td>
                <td><a href="/Admin/DeleteAbo/@x.id"><span class="fa fa-trash" style="font-size:30px;color:red;"> </span></a></td>
               <td><a href="/Admin/UpdateAbo?U=@x.email"><span class="fa fa-edit">edit</span></a></td>
            </tr>
            }
        </table>
    </div>
</div>
