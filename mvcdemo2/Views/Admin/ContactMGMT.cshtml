@{
    ViewBag.Title = "ContactMGMT";
    Layout = "~/Views/Shared/admin master.cshtml";
}

@model List<mvcdemo2.Models.ptable>
<div class="container-fluid">
<div class="row">
<table class="table table-bordered table-hover"
    style="background:linear-gradient(#A5D6A7,#2E7D32)">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Address</th>
        <th>Qyery</th>
        <th>Add</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    { 
    <tr>
        <td>@x.id</td>
        <td>@x.name</td>
        <td>@x.mob</td>
        <td>@x.email</td>
        <td>@x.address</td>
        <td>@x.query</td>
        <td><a href="#"><span class="fa fa-plus" style="font-size:30px;"></span></a></td>
        <td><a href="/Admin/DeleteCon/@x.id"><span class="fa fa-trash" style="font-size:30px;color:red;"> </span></a></td>
        <td><a href="~/Admin/UpdateCon?u=@x.email"><span class="fa fa-edit"style="font-size:30px;"></span></a></td>
    </tr>
    }
</table>
</div>
    </div>
